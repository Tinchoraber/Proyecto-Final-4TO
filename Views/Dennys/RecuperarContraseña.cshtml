

<div class="grilla">
          <div class="imagen"></div>
          <div class="padre">
            <div class="formulario">
              <div class="logo">
                <img src="../img/logo-dennys.png" alt="" />
              </div>
              
                

                @if (ViewBag.ContraseñaRecuperada != null)
                {
                    <h2 class="h2-recu">Contraseña Recuprerada!!</h2>
                    <div class="padre-recu">
                    
                    <p class="p-recu">Tu contraseña es: <strong> @ViewBag.ContraseñaRecuperada </strong> </p>
                    <div class="padre-button-recu">
                                    <div class="div-boton">
                                    <button class="button" type="submit" >
                                        <a href='@Url.Action("login", "Dennys")'>Iniciar sesion</a>
                                    </button>
                                    </div>
                                    </div>
                                    </div>
                }
                else
                {
                    <h2 class="h2-recu">Restablecer contraseña</h2>
                    <form action='@Url.Action("RecuperarContraseña", "Dennys")' method="post" class="div-form">
                        <div class="recu-div">
                        <label class="label-recu" for="Email">Email*</label>
                        <input type="text" name="Email" placeholder="ingrese su email" required>
                        </div>
                  <div class="abuelo-button-recu">
                                    <div class="padre-button-recu">
                                    <div class="div-boton">
                                    <button class="button" type="submit">
                                        Recuperar contraseña
                                    </button>
                                    </div>
                                    </div>

                                   <div class="padre-button">
                <div class="div-boton">
                  <button class="button" type="submit">
                   <a href='@Url.Action("login", "Dennys")'>Volver</a>
                  </button>
                </div>
              </div>
              </div>

                        @if (ViewBag.ErrorRecuperación != null)
                        {
                            <p class="error">@ViewBag.ErrorRecuperación</p>
                        }

                    </form>
                }


            </div>
          </div>
        </div>

